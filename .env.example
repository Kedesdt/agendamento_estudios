# Configurações da aplicação Flask

# Chave secreta para sessões e cookies (altere para um valor único e seguro em produção)
SECRET_KEY=sua_chave_secreta_super_segura_aqui

# URI do banco de dados
# Para SQLite (desenvolvimento): sqlite:///app.db
# Para PostgreSQL: postgresql://usuario:senha@localhost:5432/nome_banco
# Para MySQL: mysql://usuario:senha@localhost:3306/nome_banco
DATABASE_URI=sqlite:///app.db

# Porta em que a aplicação irá rodar
FLASK_PORT=5581

# Host (0.0.0.0 para aceitar conexões externas, 127.0.0.1 apenas local)
FLASK_HOST=0.0.0.0

# Modo debug (True ou False) - use False em produção
FLASK_DEBUG=False
